<launch>
  <arg name="first_tb3_name"  default="tb3_0"/>
  <arg name="first_tb3_model" default="burger_5"/>
  <arg name="first_tb3_x_pos" default=" 0.0"/>
  <arg name="first_tb3_y_pos" default=" 0.0"/>
  <arg name="first_tb3_z_pos" default=" 0.0"/>
  <arg name="first_tb3_yaw"   default=" 0.0"/>
  <arg name="first_tb3_id"    default=" 5"/>

  <arg name="camera_min_dist" default="0.5"/>
  <arg name="camera_max_dist" default="1"/>
  <arg name="horiz_fov"       default="1.085595"/>
  <arg name="vert_fov" 	      default="0.814196"/>
  <arg name="tag_rotation_limit" default="0.785398"/>
  <arg name="tag_size"        default="0.15"/>
  <arg name="marker_length"  default="0.1"/>
  <arg name="aruco_cal_file"  default="calibrationSave_2.p"/>

  <!-- Launch gazebo world -->
  <arg name="debug" default="false" />
  <arg name="gui" default="true" />
  <arg name="pause" default="false" />
  <arg name="world" default="$(find dse_simulation)/world/aruco_test.world" />
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world)" />
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg pause)" />
    <arg name="use_sim_time" value="true" />
  </include>

  <group ns = "$(arg first_tb3_name)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find dse_turtlebot_descriptions)/urdf/turtlebot3_$(arg first_tb3_model).urdf.xacro" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg first_tb3_name)" />
    </node>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg first_tb3_name) -x $(arg first_tb3_x_pos) -y $(arg first_tb3_y_pos) -z $(arg first_tb3_z_pos) -Y $(arg first_tb3_yaw) -param robot_description" />

    <node pkg="dse_simulation" type="aruco_pose_estimation" name="aruco_pose_estimation_node" output="screen">
      <param name="prefix" value="$(arg first_tb3_name)" />
      <param name="marker_length" type="double" value="$(arg marker_length)" />
      <param name="calibration_file" value="$(arg aruco_cal_file)" />
    </node>

    <!--<node pkg="dse_simulation" type="information_filter" name="information_filter_node" output="screen">
      <param name="prefix" value="$(arg first_tb3_name)" />
      <rosparam param="camera_limits" subst_value="True"> 
                [$(arg camera_min_dist), $(arg camera_max_dist), $(arg horiz_fov),  $(arg vert_fov)]
      </rosparam>
      <param name="tag_limit" value="$(arg tag_rotation_limit)" />
      <param name="tag_size" value="$(arg tag_size)" />
    </node>-->
  </group>
</launch>
